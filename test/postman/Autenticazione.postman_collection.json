		{
			"name": "login teacher",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"(() => {\r",
							"  let loginRes;\r",
							"\r",
							"  // 1) Base: status + JSON\r",
							"  pm.test(\"200 OK\", () => pm.response.to.have.status(200));\r",
							"  pm.test(\"JSON parseable\", () => {\r",
							"    pm.expect(() => { loginRes = pm.response.json(); }).to.not.throw();\r",
							"  });\r",
							"\r",
							"  // 2) Campi attesi\r",
							"  pm.test(\"Campi presenti\", () => {\r",
							"    pm.expect(loginRes).to.be.an(\"object\");\r",
							"    [\"access_token\",\"token_type\",\"expires_at\",\"issued_at\"].forEach(k => pm.expect(loginRes).to.have.property(k));\r",
							"    pm.expect(String(loginRes.token_type).toLowerCase()).to.eql(\"bearer\");\r",
							"  });\r",
							"\r",
							"  // 3) Token formato JWT\r",
							"  pm.test(\"Token ha formato JWT\", () => {\r",
							"    const jwtRe = /^[A-Za-z0-9\\-_]+\\.[A-Za-z0-9\\-_]+\\.[A-Za-z0-9\\-_]+$/;\r",
							"    pm.expect(loginRes.access_token).to.be.a(\"string\").and.to.match(jwtRe);\r",
							"  });\r",
							"\r",
							"  // 4) Decodifica compatibile Postman/Newman (senza verifica firma)\r",
							"  function b64urlDecode(s){\r",
							"    s = s.replace(/-/g,'+').replace(/_/g,'/');\r",
							"    const pad = s.length % 4; if (pad) s += '='.repeat(4 - pad);\r",
							"    return Buffer.from(s, 'base64').toString('utf8');\r",
							"  }\r",
							"\r",
							"  let header, payload;\r",
							"  pm.test(\"Header/Payload decodificabili\", () => {\r",
							"    const parts = loginRes.access_token.split(\".\");\r",
							"    pm.expect(parts.length).to.eql(3);\r",
							"    header = JSON.parse(b64urlDecode(parts[0]));\r",
							"    payload = JSON.parse(b64urlDecode(parts[1]));\r",
							"  });\r",
							"\r",
							"  pm.test(\"Header JWT sensato\", () => {\r",
							"    pm.expect(header).to.have.property(\"typ\").that.matches(/JWT/i);\r",
							"    pm.expect(header).to.have.property(\"alg\");\r",
							"  });\r",
							"\r",
							"  pm.test(\"Claim minimi nel payload\", () => {\r",
							"    [\"sub\",\"role\",\"iat\",\"exp\"].forEach(k => pm.expect(payload).to.have.property(k));\r",
							"  });\r",
							"\r",
							"  pm.environment.set(\"access_token\", loginRes.access_token);\r",
							"  pm.environment.set(\"Authorization\", `Bearer ${loginRes.access_token}`);\r",
							"})();\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
